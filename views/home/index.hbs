<h1 class="text-center">Gestor de series</h1>

<div class="mt-3 mb-5">
    <form action="/home/filter" method="post">
        <div class="col-12 col-md-6 offset-md-6">
            <div class="row">
                <div class="col-12 col-md-5">
                    <div class="form-group">
                        <select class="form-select" name="GenreId">
                            <option value="">Filtrar por género</option>
                            {{#each genresList}}
                            <option value="{{this.id}}" {{#if (eq this.id ../selectedGenre)}}selected{{/if}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-12 col-md-5">
                    <input type="text" class="form-control" name="Name" placeholder="Filtrar serie por nombre." value="{{selectedName}}">
                </div>
                <div class="col-12 col-md-2">
                    <button class="btn btn-outline-success" type="submit">Filtrar</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="row">
    {{#if hasseries}}
    {{#each seriesList}}
    <div class="col-12 col-md-3">
        <div class="card">
            <img src="{{this.frontPage}}" alt="Portada de {{this.name}}" class="card-img-top" height="350">
            <div class="card-body">
                <h5 class="card-title fw-bold text-center">{{this.name}}</h5>
                <p><strong>Género:</strong> {{getGenreName ../genresList this.genreId}}</p>
                <div class="mt-3">
                    <button type="button" class="btn btn-outline-success float-end" data-bs-toggle="modal"
                        data-bs-target="#detailsModal-{{this.id}}">Ver detalle</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->

    <div class="modal fade" id="detailsModal-{{this.id}}" data-bs-backdrop="static" data-bs-keyboard="false"
        tabindex="-1" aria-labelledby="detailsModalLabel-{{this.id}}" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-center text-light">
                    <h5 class="modal-title text-center" id="detailsLabel-{{this.id}}">Detalles</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <img src="{{this.frontPage}}" alt="Portada de {{this.name}}" class="card-img-top"
                                height="350">
                        </div>
                        <div class="col-12 col-md-6">
                            <h5 class="fw-bold text-center">{{this.name}}</h5>
                            <p><strong>Género:</strong> {{getGenreName ../genresList this.genreId}}</p>
                        </div>
                    </div>
                    <div class="mt-2">
                        <h6>Trailer</h6>

                        <iframe width="460" height="315" src="{{replace this.youtubeLink 'watch?v=' 'embed/'}}"
                            title="YouTube video player" frameborder="0" allowfullscreen>
                        </iframe>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Volver</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-12 col-md-8 offset-md-2">
        <div class="alert alert-info mt-3 text-center" role="alert">
            No hay ninguna serie registrada.
        </div>
    </div>
    {{/if}}
</div>