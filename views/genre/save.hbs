<div class="col-12 col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header bg-success text-light text-center">
            <h3>{{#if editmode}} Editar {{else}} Crear {{/if}} género cinematográfico</h3>
        </div>
        <div class="card-body">
            <form action="/genre/{{#if editmode}}edit{{else}}create{{/if}}" method="post">
                {{#if editmode}}
                    <input type="hidden" name="genreId" value="{{genre.id}}">
                {{/if}}

                <div class="form-group mb-3">
                    <label for="genreName" class="form-label fw-bold">Nombre del género:</label>
                    <input type="text" class="form-control" value="{{#if editmode}}{{genre.name}}{{/if}}" name="Name" id="genreName" required>
                    <div class="invalid-feedback">El nombre del género cinematográfico es obligatorio.</div>
                </div>

                <button type="submit" class="btn btn-success float-end" onclick="validate()">{{#if editmode}} Editar {{else}} Guardar {{/if}}</button>
            </form>

            <a href="/genre/index" class="btn btn-danger float-end me-3">Cancelar</a>
        </div>
    </div>
</div>

<script src="/assets/js/site/genre/validator.js"></script>