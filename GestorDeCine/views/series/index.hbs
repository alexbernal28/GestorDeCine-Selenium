<h1 class="text-center">Series</h1>

<div class="text-end mb-3">
    <a href="/series/create" class="btn btn-success">Crear nueva serie</a>
</div>

<div class="row">
    {{#if hasseries}}
    {{#each seriesList}}
    <div class="col-12 col-md-3">
        <div class="card">
            <img src="{{this.frontPage}}" alt="Portada de {{this.name}}" class="card-img-top" height="350">
            <div class="card-body">
                <h5 class="card-title fw-bold text-center">{{this.name}}</h5>
                <p><strong>Género:</strong> {{getGenreName ../genresList this.genreId}}</p>
                <div class="mt-3">
                    <button type="button" class="btn btn-outline-danger float-end" data-bs-toggle="modal"
                        data-bs-target="#confirmationModal-{{this.id}}">Eliminar</button>
                    <a href="/series/edit/{{this.id}}" class="btn btn-outline-warning float-end me-3">Editar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->

    <div class="modal fade" id="confirmationModal-{{this.id}}" data-bs-backdrop="static" data-bs-keyboard="false"
        tabindex="-1" aria-labelledby="confirmationModalLabel-{{this.id}}" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-center text-light">
                    <h5 class="modal-title" id="confirmationModalLabel-{{this.id}}">Eliminar serie</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estas seguro que deseas eliminar a la serie: <strong>{{this.name}}</strong></p>
                </div>
                <div class="modal-footer">
                    <form action="/series/delete" method="post">
                        <input type="hidden" value="{{this.id}}" name="serieId">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-12 col-md-8 offset-md-2">
        <div class="alert alert-info mt-3 text-center" role="alert">
            No hay ninguna serie registrada.
        </div>
    </div>
    {{/if}}
</div>